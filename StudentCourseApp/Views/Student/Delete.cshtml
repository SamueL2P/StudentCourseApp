@model StudentCourseApp.Models.Student


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body class=" p-8">
    <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold mb-4 text-red-600">Are you sure you want to delete this?</h3>

        <div class="mb-4">
            <h4 class="text-lg font-bold">Student</h4>
            <hr class="mb-4" />
            <dl class="mb-4">
                <dt class="text-gray-700 font-bold">Name</dt>
                <dd class="mb-2 text-gray-900">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="text-gray-700 font-bold">Age</dt>
                <dd class="mb-2 text-gray-900">@Html.DisplayFor(model => model.Age)</dd>

                <dt class="text-gray-700 font-bold">Email</dt>
                <dd class="mb-2 text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
            </dl>

            <dl class="mb-4">
                <dt class="text-gray-700 font-bold">Course</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.Course)</dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="flex justify-between items-center">
                <input type="submit" value="Delete" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded shadow-lg cursor-pointer" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "text-blue-500 hover:text-blue-700 font-bold" })
            </div>
        }
    </div>
</body>
</html>
